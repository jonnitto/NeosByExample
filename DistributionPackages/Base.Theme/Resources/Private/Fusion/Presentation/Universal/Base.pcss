    transition: filter 0.2s linear;
  }

  img:hover,
  img:focus {
    filter: none;
  }
} */

[x-cloak] {
  pointer-events: none !important;
  visibility: hidden !important;
}

input,
textarea {
  font-weight: 300;
  accent-color: theme("colors.neos.dark");
}

input[type="checkbox"],
input[type="radio"] {
  @apply checked:text-neos-dark focus:ring-neos-dark;
}
