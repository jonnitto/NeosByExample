body {
  @apply bg-white text-slate-900 font-light;

  font-feature-settings: "cpsp", "kern", "liga", "case";
}

b,
strong {
  @apply font-medium;
}

i,
em {
  @apply not-italic;
}

picture img {
  @apply mx-auto;
}

a > :not(.absolute.inset-0),
button > :not(.absolute.inset-0) {
  pointer-events: none;
}

